<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/buttonMargin</item>
        <item name="android:text">@string/title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/appTitle</item>
        <item name="android:textSize">@dimen/titleText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DividerThemeOne" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dividerHeight</item>
        <item name="android:background">@color/appTitle</item>
    </style>

    <style name="DividerThemeTwo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dividerHeight</item>
        <item name="android:background">@color/appTitle</item>
        <item name="android:layout_marginRight">@dimen/dividerMargin</item>
        <item name="android:layout_marginLeft">@dimen/dividerMargin</item>
    </style>

    <style name="ImageTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/buttonMargin</item>

    </style>
</resources>
